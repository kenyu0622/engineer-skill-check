<div class='session'>
  <%= form_for(:employees, url: login_path, class: "uk-form") do |f| %>
    <div class='uk-margin'>
      <%= f.label 'アカウント', class: 'form-label' %>
      <%= f.text_field :account, class: 'uk-input' %>
    </div>
    <div class='uk-margin'>
      <%= f.label 'パスワード', class: 'form-label' %>
      <%= f.password_field :password, class: 'uk-input' %>
    </div>
    <div class='row-center'>
      <p><%= f.submit 'ログイン',class: "uk-button uk-button-default" %></p>
    </div>
  <% end %>
</div>
