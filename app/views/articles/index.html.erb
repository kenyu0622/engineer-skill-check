<div class="employee_index">
  <% if flash.notice.present? %>
    <p><%= flash.notice %></p>
  <% end %>

  <% if current_user.news_posting_auth %>
    <p class="new_employee"><%= link_to '新規追加', new_employee_article_path(current_user), class: 'btn' %></p>
  <% end %>

  <table class="employee_table">
    <thead>
    <tr>
      <th><%= sort_order "created_at", "公開日" %></th>
      <th>タイトル</th>
      <th>作成者</th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr class="employee">
        <th><%= article.created_at.strftime("%Y/%m/%d") %></th>
        <th><%= link_to article.title, article_path(article) %></th>
        <th><%= "#{article.employee.last_name} #{article.employee.first_name}" %></th>
        <% if current_user.news_posting_auth %>
          <th class="btn_th"><%= link_to '編集', edit_employee_article_path(article.employee, article), class: 'btn' %></th>
          <% if current_user == article.employee %>
          <th class="btn_th"><%= link_to '削除', article, method: :delete, data: { confirm: "記事「#{article.title}」を削除します。よろしいですか？" }, class: 'btn' %></th>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
