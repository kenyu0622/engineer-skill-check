<% if article.errors.present? %>
  <ul>
    <% article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [employee, article], local: true, class: "uk-form" do |f| %>
  <div class="uk-margin">
    <%= f.label :title, class: 'label' %>
    <%= f.text_field :title, class: "uk-input" %>
  </div>

  <div class="uk-margin">
    <%= f.label :content, class: 'label' %>
    <%= f.text_area :content, class: "uk-textarea" %>
  </div>
  <%= f.submit '保存', class: "uk-button uk-button-default" %>
<% end %>
