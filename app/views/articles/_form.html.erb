<% if article.errors.present? %>
  <ul>
    <% article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [employee, article], local: true do |f| %>
  <div class="form_group">
    <%= f.label :title, class: 'label' %>
    <%= f.text_field :title %>
  </div>

  <div class="form_group">
    <%= f.label :content, class: 'label' %>
    <%= f.text_area :content %>
  </div>
  <%= f.submit '保存' %>
<% end %>
